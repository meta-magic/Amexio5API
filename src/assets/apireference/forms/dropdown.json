{
  "name": "Amexio Dropdown",
  "description": "Drop-Down component has been created to render N numbers of drop-down items based on data-set configured. Data-set can be configured using HTTP call OR Define fix number of dropdown-items. User can configure different attributes for enabling filter, multi-select, maximum selection in case of multi select.",
  "selector": "<amexio-dropdown>",
  "properties": [
    {
      "name": "field-label",
      "description": "The label of this field",
      "version": "4.0 onwards",
      "type": "string",
      "default": ""
    },
    {
      "name": "allow-blank",
      "description": "Sets if field is required",
      "version": "4.0 onwards",
      "type": "string",
      "default": ""
    },
    {
      "name": "data",
      "description": "Local data for dropdown.",
      "version": "4.0 onwards",
      "type": "any",
      "default": ""
    },
    {
      "name": "data-reader",
      "description": "Key in JSON datasource for records",
      "version": "4.0 onwards",
      "type": "string",
      "default": ""
    },
    {
      "name": "http-method",
      "description": "Type of HTTP call, POST,GET.",
      "version": "4.0 onwards",
      "type": "string",
      "default": ""
    },
    {
      "name": "http-url",
      "description": "REST url for fetching datasource.",
      "version": "4.0 onwards",
      "type": "string",
      "default": ""
    },
    {
      "name": "display-field",
      "description": "Name of key inside response data to display on ui.",
      "version": "4.0 onwards",
      "type": "string",
      "default": ""
    },
    {
      "name": "value-field",
      "description": "Name of key inside response data.use to send to backend",
      "version": "4.0 onwards",
      "type": "string",
      "default": ""
    },
    {
      "name": "search",
      "description": "true for search box enable",
      "version": "4.0 onwards",
      "type": "boolean",
      "default": "false"
    },
    {
      "name": "multi-select",
      "description": "true for select multiple options",
      "version": "4.0 onwards",
      "type": "boolean",
      "default": "false"
    },
    {
      "name": "error-msg",
      "description": "Sets the error message",
      "version": "4.0 onwards",
      "type": "string",
      "default": ""
    },
    {
      "name": "font-style",
      "description": "Set font-style to field",
      "version": "4.0 onwards",
      "type": "string",
      "default": ""
    },
    {
      "name": "font-family",
      "description": "Set font-family to field",
      "version": "4.0 onwards",
      "type": "string",
      "default": ""
    },
    {
      "name": "font-size",
      "description": "Set font-size to field",
      "version": "4.0 onwards",
      "type": "string",
      "default": ""
    },
    {
      "name": "has-label",
      "description": "flag to set label",
      "version": "4.0 onwards",
      "type": "boolean",
      "default": "false"
    },
    {
      "name": "enable-popover",
      "description": "Set enable / disable popover.",
      "version": "4.0 onwards",
      "type": "boolean",
      "default": "false"
    }
  ],
  "events": [
    {
      "name": "onBlur",
      "description": "On blur event"
    },
    {
      "name": "input",
      "description": "On input event field."
    },
    {
      "name": "focus",
      "description": "On field focus event"
    },
    {
      "name": "onSingleSelect",
      "description": "Fire when drop down item selected."
    },
    {
      "name": "onMultiSelect",
      "description": "Fire when multiple record select in drop down.this event is only applied when multi-select=true"
    },
    {
      "name": "onClick",
      "description": "On record select event.this event is only for normal dropdown."
    }
  ]
}